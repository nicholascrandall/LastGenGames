<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>
<main>
    <h2><%=merch.name%></h2>
    <img class = "showImg" src="/assets/<%=merch.img%>" alt="">
    <span>
        <p id = desc>Description</p>
        <p>"<%=merch.description%>"</p>
    </span>
    <div>
        <h4>Price: $<%=merch.price%>.00</h4>
    </div>
    <% if (merch.qty > 0) { %>
        <form action="/merch/<%=merch.id%>?_method=PATCH" method="POST">

            <input type="image" id = "buy" src="/assets/buy.png" alt="Buy Now">

        </form>
        <h3><%=merch.qty%> left in stock</h3>
<%  } else { %>
        <img id = "soldShow" src="/assets/soldOut.png" alt="Sold Out">
<% } %>
    <br>
    <a href="/merch">back</a>
</main>

<%- include('../partials/footer.ejs') %>